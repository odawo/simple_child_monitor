<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingRight="16dp"
    android:background="@drawable/ic_d"
    android:backgroundTint="@android:color/background_light"
    tools:context="com.example.vanessa.childdevelopmentapp.MainActivity">

    <ImageView
        android:id="@+id/applogo"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_cd2"/>

    <Button
        android:id="@+id/toquiz"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_alignParentLeft="true"
        android:text="Child Monitor"/>

    <Button
        android:id="@+id/toinfo"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_alignParentRight="true"
        android:text="Child Information"/>

</RelativeLayout>
